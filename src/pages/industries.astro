---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import IndustriesVault from '../components/IndustriesVault.jsx';
import { Image } from 'astro:assets';
import industriesVault from '../assets/industries-hero-vault.png';
import customBuild from '../assets/blueprint-custom-build.png';

---

<Layout 
    title="Industry AI Library & Neural Blueprints | SystemPros.ai"
    description="Browse our vault of pre-trained AI agents for 50+ industries. From Dental to roofing, we have a neural blueprint ready to deploy."
>
    <main class="overflow-x-hidden">
        
        <!-- SECTION 1: HERO (The Library Hook) -->
        <section class="min-h-screen relative flex items-center pt-32 pb-20">
             <div class="absolute inset-0 bg-gradient-hero pointer-events-none"></div>
             
             <div class="container mx-auto px-4 grid lg:grid-cols-2 gap-12 items-center relative z-10">
                 <!-- Text Left -->
                 <div class="space-y-8 animate-fade-in-up">
                     <h1 class="text-5xl md:text-7xl font-extrabold tracking-tighter leading-tight">
                         We Don't Start From Scratch. <br />
                         <span class="text-gradient">We Start With Experience.</span>
                     </h1>
                     <p class="text-xl text-secondary leading-relaxed max-w-xl">
                         Browse our library of pre-trained AI Neural Networks. These agents already know your industry jargon, objection handling scripts, and scheduling logic. Ready to deploy on Day 1.
                     </p>
                     <div class="flex flex-col sm:flex-row gap-4 pt-4">
                         <a href="#vault" class="btn-primary text-center bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-500 hover:to-cyan-400">
                             Browse The Vault
                         </a>
                         <a href="#custom" class="px-8 py-4 rounded-full border border-white/20 hover:bg-white/5 hover:border-white/40 transition-all font-semibold text-white/90 text-center">
                             Request Custom Industry
                         </a>
                     </div>
                 </div>

                 <!-- Visual Right -->
                 <div class="relative h-[600px] w-full flex items-center justify-center animate-fade-in-up delay-200">
                     <div class="absolute inset-0 bg-blue-500/10 blur-[100px] rounded-full"></div>
                     <Image 
                        src={industriesVault} 
                        alt="AI Knowledge Vault" 
                        class="relative z-10 w-full object-contain drop-shadow-[0_0_50px_rgba(59,130,246,0.3)] hover:scale-105 transition-transform duration-700"
                     />
                 </div>
             </div>
        </section>

        <!-- SECTION 2: THE FILTERABLE VAULT (The Blueprints) -->
        <section id="vault" class="py-24 relative bg-black/50">
             <div class="container mx-auto px-4">
                 <div class="text-center mb-16">
                     <h2 class="text-4xl md:text-5xl font-bold mb-4">The Neural Blueprint Library</h2>
                     <p class="text-xl text-secondary">Select an industry to hear the agent in action.</p>
                 </div>

                 <!-- React Component for Filtering and Grid -->
                 <IndustriesVault client:visible />
                 
             </div>
        </section>

        <!-- SECTION 3: THE "CUSTOM ARCHITECTURE" UPSELL (The Catch-All) -->
        <section id="custom" class="py-32 relative bg-[#050505] overflow-hidden">
             <!-- Background Grid -->
             <div class="absolute inset-0 bg-[url('/assets/grid.svg')] bg-center opacity-10"></div>
             
             <div class="container mx-auto px-4 text-center relative z-10">
                 <div class="max-w-4xl mx-auto mb-16">
                     <h2 class="text-4xl md:text-5xl font-bold mb-6">Don't See Your Industry? <br/> <span class="text-blue-500">We Will Architect It For You.</span></h2>
                     <p class="text-xl text-secondary leading-relaxed">
                         Our 30-year IT background means we can map any workflow, no matter how complex. We will build a custom neural network for your specific niche, train it on your SOPs, and integrate it with your proprietary software.
                     </p>
                 </div>

                 <!-- Visual Center -->
                 <div class="relative max-w-3xl mx-auto mb-16 group">
                     <div class="absolute inset-0 bg-blue-500/20 blur-[80px] rounded-full group-hover:bg-blue-500/30 transition-colors duration-700"></div>
                     <Image 
                        src={customBuild} 
                        alt="Custom Architecture Build" 
                        class="relative z-10 w-full rounded-xl shadow-2xl border border-white/10 hover:border-blue-500/50 transition-colors duration-500"
                     />
                 </div>
                 
                 <a href="/contact" class="btn-primary-lg shadow-[0_0_40px_rgba(59,130,246,0.4)] hover:shadow-[0_0_60px_rgba(59,130,246,0.6)]">
                     Request Custom Architecture Build
                 </a>
             </div>
        </section>

        <!-- SECTION 4: FINAL CTA (The Bridge) -->
        <section class="py-24 relative overflow-hidden">
             <div class="absolute inset-0 bg-gradient-to-t from-blue-900/20 to-black z-0"></div>
             <div class="container mx-auto px-4 relative z-10 text-center max-w-3xl">
                 <h2 class="text-3xl md:text-5xl font-bold mb-8">
                     These aren't just demos. <br/> They are ready-to-deploy assets.
                 </h2>
                 <a href="/contact" class="px-10 py-5 rounded-full bg-blue-600 hover:bg-blue-500 text-white font-bold text-lg shadow-lg hover:shadow-blue-500/50 transition-all transform hover:-translate-y-1">
                     Book Your Deployment Call
                 </a>
             </div>
        </section>

    </main>
    <Footer />
</Layout>
